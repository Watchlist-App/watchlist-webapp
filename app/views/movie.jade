.thumbnail
  img(src="{{poster}}")
  .caption
    h3 {{movie.title}}
    p {{movie.overview}}
    h4 genres:
    ul
      li(ng-repeat="genre in movie.genres") {{genre.name}}
    p
      a.btn.btn-primary(href="#", role="button") info
      a.btn.btn-default(href="#", role="button") add
  iframe(width="560", height="315", ng-src="{{trailerURL}}", frameborder="0", allowfullscreen)

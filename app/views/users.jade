h1 Watchlist Users

label.control-label(for="search") search
input#search.form-control(type="text", ng-model="search")
br

.row
  div(masonry)
    .masonry-brick.thumbnail(ng-repeat="user in users | filter : search")
      a(href="#profile/{{user.id}}")
        img(ng-src="http://www.gravatar.com/avatar/{{user.email | gravatar}}?s=150&d=mm", height="150", width="150")
        h5 {{user.name}}
